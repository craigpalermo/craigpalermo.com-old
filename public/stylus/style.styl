@import 'nib'

.center
    align-items center !important
    text-align center

.center-vert
    align-items flex-start
    display flex
    flex-direction column
    height 100%
    justify-content center

.pic-container
    align-items center
    justify-content center
    display flex

section
    padding 30px 0

section:not(first-child)
    border-top 1px solid #B6B6B6

h3
    color #727272
    font-size 25px
    text-align center
    text-transform uppercase

h5
    font-size 22px

a
    color rgba(146, 146, 146, 1)

a:focus
a:active
a:hover
    color rgba(146, 146, 146, .8)


// navbar
nav
    background #303030
    font-size 18px
    padding 10px auto

nav ul
    display flex
    align-items center
    justify-content center
    height 40px
    margin auto
    text-align center

nav li
    display inline
    list-style-type none
    margin-bottom 3px
    padding 0 20px

nav a
    color #fff
    text-decoration none
    transition all .2s ease

nav a:focus
nav a:active
nav a:hover
    color #fff
    opacity .6


// header
.header
    background url("../img/background.jpg") no-repeat center center fixed
    border-bottom 2px solid rgba(146, 146, 146, 0.22)
    color #fff
    text-align center

.header-overlay
    background rgba(0, 0, 0, .3)
    height 100%
    padding 80px 0
    width 100%

.title
    margin-bottom 1rem

.subtitle
    font-size 24px

.img-round
    border-radius 50%
    height 120px
    width 120px


// about section
#avatar
    background url('../img/avatar.jpg') center center no-repeat
    background-size 100%
    margin-bottom 25px

.about .column
    height 200px


// experience section
.experience__title
    margin-bottom 8px


// education section
#umd
    background url('../img/umd.png') center center no-repeat
    background-size 100%

.education
    
    p
        margin-bottom 10px

    .column
        height 200px


// footer
.footer
    text-align center
