@import 'nib'

.center
    align-items center !important
    text-align center

.center-vert
    align-items flex-start
    display flex
    flex-direction column
    height 100%
    justify-content center

.pic-container
    align-items center
    justify-content center
    display flex

section
    padding 30px 0

section:not(first-child)
    border-top 1px solid #B6B6B6


h2
h3
    font-family 'Bitter', serif

h3
    color #727272
    font-size 25px
    text-align center
    text-transform uppercase

h5
    font-size 22px

a
    color #2185C5
    text-decoration none

a:focus
a:active
a:hover
    opacity .65


// navbar
nav
    background #303030
    color #fff
    font-size 20px
    padding 10px 0

nav .container > div
    display flex
    flex-flow row wrap
    justify-content space-between

nav ul
    margin 0

nav li
    display inline
    list-style-type none
    padding 0 0 0 40px

nav a
    text-decoration none

@media screen and (max-width: 550px)
    .nav__logo
    .nav__links
        text-align center
        width 100%

    nav li
        padding 0 20px


// header
.header
    background url("../img/background.jpg") no-repeat center center fixed
    border-bottom 2px solid rgba(146, 146, 146, 0.22)
    color #fff
    text-align center

.header-overlay
    background rgba(0, 0, 0, .5)
    height 100%
    padding 100px 0
    width 100%

.title
    font-size 4rem
    margin-bottom 1rem
    text-transform uppercase

.subtitle
    font-size 24px

.img-round
    border-radius 50%
    height 120px
    width 120px


// skills section
.skill
    align-items center
    display flex
    flex-direction column
    justify-content center
    text-align center

    i
        font-size 60px

    .skill__title
        font-size 2rem
        margin 14px 0 6px


// about section
#avatar
    background url('../img/avatar.jpg') center center no-repeat
    background-size 100%
    margin-bottom 25px

.about .column
    height 200px


// experience section
.experience__title
    margin-bottom 8px


// education section
#umd
    background url('../img/umd.png') center center no-repeat
    background-size 100%

.education
    
    p
        margin-bottom 10px

    .column
        height 200px


// footer
.footer
    text-align center
