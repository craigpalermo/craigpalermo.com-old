@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Racing+Sans+One')

.center
    align-items center !important
    text-align center

.center-vert
    align-items flex-start
    display flex
    flex-direction column
    height 100%
    justify-content center

.pic-container
    align-items center
    justify-content center
    display flex

section
    padding 30px 0

section
    border-bottom 1px solid #B6B6B6


h1
h2
h3
    font-family 'Bitter', serif

h3
    color #727272
    font-size 25px
    text-align center
    text-transform uppercase

h5
    font-size 22px

a
    color #169CFF
    text-decoration none

a:focus
a:hover
  opacity .65


/*
* navbar
*/
nav
    background #303030
    color #fff
    font-size 20px
    padding 10px 0

nav .container > div
    display flex
    flex-flow row wrap
    justify-content space-between

nav ul
    margin 0

nav li
    display inline
    font-size 18px
    list-style-type none
    padding 0 0 0 40px

nav a
    text-decoration none

nav .active
  text-decoration underline

.nav__logo a
    color #fff !important
    font-family 'Racing Sans One', cursive

@media screen and (max-width: 550px)
    .nav__logo
    .nav__links
        text-align center
        width 100%

    nav li
        padding 0 20px


/*
* header
*/
.header
    background url("../img/background.jpg") no-repeat center center fixed
    border-bottom 2px solid rgba(146, 146, 146, 0.22)
    color #fff
    text-align center

.header-overlay
    background rgba(0, 0, 0, .5)
    height 100%
    padding 100px 0
    width 100%

.title
    font-size 4rem
    margin-bottom 1rem
    text-transform uppercase

.subtitle
    font-size 24px

.img-round
    border-radius 50%
    height 120px
    width 120px


/*
* skills section
*/
.skill
    align-items center
    display flex
    flex-direction column
    justify-content center
    text-align center

    i
        font-size 60px

    .skill__title
        font-size 2rem
        margin 14px 0 6px


/*
* experience section
*/
.experience__title
    margin-bottom 8px

.experience__detail
    font-style italic
    margin-bottom 8px


/*
* call to action
*/
.cta i
  font-size 64px
  margin-bottom 16px


/*
* footer
*/
.footer
    text-align center

    p
      margin 12px 0
